<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true"><layer-list>
        <item android:bottom="-20dp" android:left="-20dp" android:right="-20dp"><shape>
            <stroke android:width="1dp" android:color="#ffffff" />

        </shape></item>
    </layer-list></item>
    <item android:state_enabled="true"><layer-list>
        <item android:bottom="-20dp" android:left="-20dp" android:right="-20dp"><shape android:shape="line">
            <gradient android:angle="270" android:endColor="@color/lightBlue" android:startColor="@color/lightBlue" />

            <stroke android:width="@dimen/login_border" android:color="@color/lightBlue" />
        </shape></item>
    </layer-list></item>

</selector>