<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlack"
    >
    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_40dp"
        android:background="@drawable/bg_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Playlist"
            android:textColor="@color/lightBlue"
            android:textSize="@dimen/text_size_13sp"/>
        <LinearLayout
            android:id="@+id/llAddPlaylist"
            android:layout_width="@dimen/toolbar_height_40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/item_width_20dp"
                android:layout_height="@dimen/item_width_20dp"
                android:src="@drawable/icon_add"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_playlists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:clipToPadding="false">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>