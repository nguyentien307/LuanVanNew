<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/tlLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_40dp"
            android:background="@drawable/bg_header"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_login"
                android:textColor="@color/lightBlue"
                android:textSize="@dimen/title_text_size_16dp" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rlLoginContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/rlLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/llEmail"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="@dimen/login_heigth_35dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/image_login_size_20dp"
                                android:layout_height="@dimen/image_login_size_20dp"
                                android:src="@drawable/email" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_login_selector"
                            android:hint="@string/email_hint"
                            android:imeActionLabel="Xong"
                            android:imeOptions="actionDone"
                            android:lines="1"
                            android:padding="@dimen/padding_5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/dardGray"
                            android:textSize="@dimen/login_text_sỉze" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp">

                        <TextView
                            android:id="@+id/tvEmailInvalid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/login_heigth_35dp"
                            android:text="@string/field_require"
                            android:textColor="@color/red"
                            android:textSize="@dimen/invalid_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="@dimen/login_heigth_35dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="@dimen/image_login_size_20dp"
                                android:layout_height="@dimen/image_login_size_20dp"
                                android:src="@drawable/password" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_login_selector"
                            android:hint="@string/password_hint"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:padding="@dimen/padding_5dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/dardGray"
                            android:textSize="@dimen/login_text_sỉze" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp">

                        <TextView
                            android:id="@+id/tvPasswordInvalid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/login_heigth_35dp"
                            android:text="@string/field_require"
                            android:textColor="@color/red"
                            android:textSize="@dimen/invalid_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLogin"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="@dimen/login_heigth_35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/btn_margin_top_30dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_login_selector"
                        android:text="@string/login_button"
                        android:textColor="@drawable/btn_login_text_color" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlLoginLoading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="parent">

                <include
                    android:id="@+id/include"
                    layout="@layout/item_loading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </RelativeLayout>

