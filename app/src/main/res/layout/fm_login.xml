<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/tlLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_40dp"
            android:gravity="center"
            android:background="@drawable/bg_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_login"
                android:textColor="@color/lightBlue"
                android:textSize="@dimen/title_text_size_16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/rlLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp">

                <LinearLayout
                    android:id="@+id/llEmail"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="@dimen/login_heigth_35dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/image_login_size_20dp"
                                android:layout_height="@dimen/image_login_size_20dp"
                                android:src="@drawable/email" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edEmail"
                            android:imeActionLabel="Xong"
                            android:imeOptions="actionDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_login_selector"
                            android:hint="@string/email_hint"
                            android:padding="@dimen/padding_5dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/dardGray"
                            android:textSize="@dimen/login_text_sỉze"
                            android:singleLine="true"
                            android:lines="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp">

                        <TextView
                            android:id="@+id/tvEmailInvalid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/login_heigth_35dp"
                            android:text="@string/field_require"
                            android:textColor="@color/red"
                            android:textSize="@dimen/invalid_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="@dimen/login_heigth_35dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="@dimen/image_login_size_20dp"
                                android:layout_height="@dimen/image_login_size_20dp"
                                android:src="@drawable/password" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_login_selector"
                            android:hint="@string/password_hint"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:padding="@dimen/padding_5dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/dardGray"
                            android:textSize="@dimen/login_text_sỉze"
                            android:singleLine="true"
                            android:lines="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp">

                        <TextView
                            android:id="@+id/tvPasswordInvalid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/login_heigth_35dp"
                            android:text="@string/field_require"
                            android:textColor="@color/red"
                            android:textSize="@dimen/invalid_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLogin"
                    android:layout_width="@dimen/login_width_230dp"
                    android:layout_height="@dimen/login_heigth_35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/btn_margin_top_30dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_login_selector"
                        android:text="@string/login_button"
                        android:textColor="@drawable/btn_login_text_color" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlForgotPass"
                android:layout_width="@dimen/login_width_230dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rlLogin"
                android:layout_alignStart="@+id/rlLogin"
                android:layout_below="@+id/rlLogin"
                android:gravity="center"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/login_text_sỉze" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLoginLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <include layout="@layout/item_loading"/>
                </RelativeLayout>

            <LinearLayout
                android:id="@+id/llSignInWith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rlForgotPass"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:gravity="right">

                    <View
                        android:layout_width="@dimen/length_line_30dp"
                        android:layout_height="0.5dp"
                        android:background="@color/borderBlack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in_with"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sign_in_with_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="@dimen/length_line_30dp"
                        android:layout_height="0.5dp"
                        android:background="@color/borderBlack" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_heigth_35dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llSignInWith"
                android:layout_margin="@dimen/padding_8dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/login_heigth_35dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/image_login_size_30dp"
                        android:layout_height="@dimen/image_login_size_30dp"
                        android:src="@drawable/facebook" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/login_heigth_35dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/image_login_size_30dp"
                        android:layout_height="@dimen/image_login_size_30dp"
                        android:src="@drawable/google_plus" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>