<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height_40dp"
    android:background="@drawable/bg_header"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/llSearchCategories"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_20dp">
        <EditText
            android:id="@+id/edSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:background="@drawable/edittext_login_selector"
            android:hint="@string/searching_for_songs"
            android:inputType="text|textAutoCorrect"
            android:imeOptions="actionSearch"
            android:textColor="@color/white"
            android:textColorHint="@color/dardGray"
            android:textSize="@dimen/text_size_13sp"
            android:singleLine="true"
            android:lines="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSearchCategories"
        android:layout_width="@dimen/toolbar_height_40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/image_category_size_20dp"
            android:layout_height="@dimen/image_category_size_20dp"
            android:src="@drawable/search_property" />

    </LinearLayout>
</RelativeLayout>